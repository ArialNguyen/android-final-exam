<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="350dp" android:layout_height="0dp"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:id="@+id/constraintLayout3" android:padding="15dp">

        <EditText
                android:id="@+id/etDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Mô tả (tùy chọn)"
            android:fontFamily="@font/playfairdisplay_medium"
                android:inputType="text"
                android:layout_below="@+id/etFolderName"
                android:layout_alignParentStart="true"
                app:layout_constraintTop_toBottomOf="@+id/etFolderName" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:id="@+id/etFolderName"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:hint="Tên thư mục"
            android:fontFamily="@font/playfairdisplay_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="Cancel"
        android:fontFamily="@font/playfairdisplay_bold"
            android:layout_width="wrap_content"
            android:layout_height="48dp" android:id="@+id/btnCancel"
            android:textColorHighlight="#E91E63"
        android:backgroundTint="@color/green"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>
    <Button
            android:text="OK"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/playfairdisplay_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnOkay"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintEnd_toStartOf="@+id/btnCancel" android:layout_marginEnd="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>