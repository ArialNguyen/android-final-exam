            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các học phần tương ứng public"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.525"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitleNamePublic_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Tiếng anh"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:id="@+id/rePublic_main"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitleName_library">

                        <TextView
                            android:id="@+id/txTotalTermPublic_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:text="3 thuật ngữ"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout android:layout_width="368dp" android:layout_height="33dp"
                        app:layout_constraintTop_toBottomOf="@+id/round_background"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.627">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgAvatarIconPublic_main"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/person"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/round_background"
                            android:layout_marginLeft="12dp" tools:ignore="NotSibling"/>
                        <TextView
                            android:id="@+id/tvUserNamePublic_main"
                            android:layout_width="223dp"
                            android:layout_height="match_parent"
                            android:text="quizlette23254363"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imgAvatarIconPublic_main"
                            app:layout_constraintTop_toBottomOf="@+id/round_background"
                            android:gravity="center_vertical"
                            android:layout_alignParentEnd="true" android:layout_marginEnd="85dp"
                            android:layout_toEndOf="@+id/imgAvatarIconPublic_main" android:layout_marginStart="8dp"
                            tools:ignore="NotSibling"/>
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

