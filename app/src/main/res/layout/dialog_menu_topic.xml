<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_menu_topic">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_remove_black_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_clear"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="8dp"
            android:id="@+id/imgCancel_DetailTopic"/>

    </LinearLayout>


    <LinearLayout android:id="@+id/llForOwner_menuTopic" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/liAddInFolder_DetailTopic"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_folder_30"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm vào thư mục"
                android:fontFamily="@font/playfairdisplay_semibold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/liEdit_DetailTopic"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_fix_30"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sửa"
                android:fontFamily="@font/playfairdisplay_semibold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/liEditStatus_DetailTopic"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_status_30"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái"
                android:fontFamily="@font/playfairdisplay_semibold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/liRemove_DetailTopic"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="30dp">


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_remove_30"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xóa học phần"
                android:fontFamily="@font/playfairdisplay_semibold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout android:id="@+id/llForGuest_menuTopic" android:visibility="gone" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/llSaveForGuest_DetailTopic"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_folder_30"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>