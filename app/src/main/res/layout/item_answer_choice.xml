<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_marginBottom="15dp"
                                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:id="@+id/layout_false_choiceTest"
                                                       android:layout_height="match_parent"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           app:layout_constraintTop_toTopOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" app:layout_constraintTop_toTopOf="parent"
                          android:background="@color/white"
                          android:paddingTop="50dp"
                          android:paddingBottom="10dp"
                          app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                          android:id="@+id/linearLayout6">
                <TextView android:layout_width="match_parent"
                          android:text="answer"
                          android:gravity="center"
                          android:textSize="18dp"
                          android:layout_height="wrap_content"
                          android:id="@+id/tv_TermTitle_choiceTest"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/layoutBoxTrueAnswer_choiceTest"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="30dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_height="30dp" app:srcCompat="@drawable/check_tick"
                                android:id="@+id/imageView21"/>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/tvTrueAnswer_choiceTest"
                                  android:text="True Answer"
                                  android:gravity="center"
                                  android:textStyle="bold"
                                  android:layout_marginBottom="5dp"
                                  android:textColor="@color/text_Knew"
                                  android:textSize="18dp"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_weight="1"
                                  android:orientation="vertical"
                                  android:id="@+id/layoutBoxFalseAnswer_choiceTest"
                                  android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="30dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_height="30dp" app:srcCompat="@drawable/cancel_tick"
                                android:id="@+id/imageView20"/>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/tvFalseAnswer_choiceTest"
                                  android:text="False chosen"
                                  android:gravity="center"
                                  android:textStyle="bold"
                                  android:layout_marginBottom="5dp"
                                  android:textColor="#f87171"
                                  android:textSize="18dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:id="@+id/layoutBoxFalse_choiceTest" android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:background="#ef4444"
                          app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
                          app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                        android:layout_width="25dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp" app:srcCompat="@drawable/canvel_tick_white"
                        android:id="@+id/imageView23"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginLeft="10dp"
                          android:text="Sai"
                          android:gravity="center"
                          android:textColor="@color/white"
                          android:textSize="22dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          app:layout_constraintBottom_toBottomOf="parent"
                          android:orientation="horizontal"
                          android:padding="8dp"
                          android:id="@+id/layoutBoxTrue_choiceTest"
                          android:background="#10b981"
                          app:layout_constraintTop_toBottomOf="@+id/layoutBoxFalse_choiceTest"
                          app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                        android:layout_width="25dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp" app:srcCompat="@drawable/check_tick_white"
                        android:id="@+id/imageView15"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginLeft="10dp"
                          android:text="Đúng"
                          android:gravity="center"
                          android:textColor="@color/white"
                          android:textSize="22dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>