<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="330dp"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:padding="10dp"
                                                   android:background="@drawable/white_background_algorithm"
                                                   android:elevation="3dp"
                                                   android:layout_marginEnd="10dp"
                                                   android:id="@+id/itemAdapterLibraryTopic">


    <TextView
            android:id="@+id/tvTitleName_itemTopicHorizon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Tiếng anh"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
            android:id="@+id/round_background"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleName_itemTopicHorizon">

        <TextView
                android:id="@+id/tvTotalTerm_itemTopicHorizon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="3 thuật ngữ"
                android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout android:layout_width="0dp" android:layout_height="33dp"
                    app:layout_constraintTop_toBottomOf="@+id/round_background"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.627">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatarIcon_itemTopicHorizon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/person"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/round_background"
                 tools:ignore="NotSibling" android:layout_alignParentStart="true"
                 android:layout_alignParentTop="true"/>
        <TextView
                android:id="@+id/tvUserName_itemTopicHorizon"
                android:layout_width="223dp"
                android:layout_height="match_parent"
                android:text="quizlette23254363"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgAvatarIcon_itemTopicHorizon"
                app:layout_constraintTop_toBottomOf="@+id/round_background"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="85dp"
                android:layout_toEndOf="@+id/imgAvatarIcon_itemTopicHorizon" android:layout_marginStart="8dp"
                tools:ignore="NotSibling"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>